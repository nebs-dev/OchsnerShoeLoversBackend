<section class="content-header clearfix">
    <h1><%= __('Trend') %>
        <small><%= __('Language') %> - <%= req.params.language %></small>
    </h1>
</section>


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><%= __('Trend data') %></h3>
                </div>

                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form class="ajaxForm" action="" method="post" enctype="multipart/form-data">

                                <div class="box-body row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="name"><%= __('Trend title') %></label>
                                            <input class="form-control" id="title" name="title" type="text" value="<%= trend ? trend.title : "" %>" placeholder="<%= __('Enter trend title') %>" required>
                                        </div>


                                        <div class="form-group">
                                            <label for="description"><%= __('Trend description') %></label>
                                            <textarea class="form-control wysiwyg" id="description" name="description" placeholder="<%= __('Enter trend description') %>"><%= trend ? trend.description : "" %></textarea>
                                        </div>

                                        <div class="form-group">
                                            <label for="name"><%= __('Date range') %></label>
                                            <input class="form-control" id="daterange" name="daterange" type="text" value="<%= trend ? trend.date : ''%>" placeholder="<%= __('Enter offer date range') %>" required>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                                <label><%= __('List view image') %></label>
                                                <input type="file" class="cropper-picker">
                                            <div class="cropper-holder">
                                                <img data-name="listImage" data-width="1000" data-height="500" class="cropper" src="<%= trend.listImage ? trend.listImage : '/images/default.png' %>">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                                <label><%= __('Detail view image') %></label>
                                                <input type="file" class="cropper-picker">
                                            <div class="cropper-holder">
                                                <img data-name="detailImage" data-width="500" data-height="500" class="cropper" src="<%= trend.detailImage ? trend.detailImage : '/images/default.png' %>">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="box-footer">
                                    <button type="submit" class="btn btn-success submitBtn"><%= __('Submit') %></button>
                                    <a class="btn btn-link btn-sm" href="/trends/<%= req.params.language %>">
                                        <span><%= __("Cancel") %></span> 
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>