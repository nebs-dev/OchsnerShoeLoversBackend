<section class="content-header clearfix">
    <h1><%= __('Teasers') %>
        <small><%= __('Language') %> - <%= req.params.language %></small>
    </h1>
</section>


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><%= __('Teasers') %></h3>

                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th class="col-md-6"><%= __('Photo') %></th>
                                        <th class="col-md-1"><%= __('Link') %></th>
                                        <th class="col-md-2"><%= __('Actions') %></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% _.each(teasers, function(teaserItem) { %>
                                    <tr>
                                        <td class="table-title">
                                            <img src="<%= teaserItem.image ? teaserItem.image : '/images/default.png' %>" class="list-image" alt="Teaser Image"/>
                                        </td>
                                        <td class="table-title">
                                            <a href="<%= teaserItem.link %>"><%= teaserItem.link %></a>
                                        </td>
                                        <td>
                                            <a class="btn btn-success btn-sm" href="/teasers/<%= req.params.language %>/<%= teaserItem.id %>">
                                                <i class="fa fa-edit"></i> <span><%= __("Edit") %></span>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <% if (teasers.length < 2) { %>
                    <div class="box-footer">
                        <a class="btn btn-success btn-sm" href="/teasers/<%= req.params.language %>/create">
                            <i class="fa fa-edit"></i> <span><%= __("Add new") %></span> </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</section>